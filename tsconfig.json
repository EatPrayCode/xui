{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./projects/",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "~/*": ["xui/src/*"],
      "@core/*": ["xui/src/app/echoes-core/*"],
      "@utils/*": ["xui/src/app/echoes-shared/utils/*"],
      "@shared/*": ["xui/src/app/echoes-shared/*"],
      "@animations/*": ["xui/src/app/echoes-shared/animations/*"],
      "@api/*": ["xui/src/app/echoes-core/api/*"],
      "@resolvers/*": ["xui/src/app/echoes-core/resolvers/*"],
      "@store/*": ["xui/src/app/echoes-core/store/*"],
      "@mocks/*": ["xui/tests/mocks/*"],
      "@env/*": ["xui/src/environments/*"],
      "@services/*": ["xui/src/app/services/*"],
      "@features/*": ["src/app/modules/features/*"]
    }
  }
}
