{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@core/*": ["app/modules/core/*"],
      "@shared/*": ["app/modules/shared/*"],
      "@models/*": ["app/modules/core/*"],
      "@services/*": ["app/services/*"],
      "@features/*": ["src/app/modules/features/*"]
    }
  }
}
